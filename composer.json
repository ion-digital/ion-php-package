{
    "name": "ion/packaging",
    "type": "library",
    "description": "A small library that functions as the base to all ION packages, intended to handle basic package and versioning functionality.",
    "keywords": [
        "PHP"
    ],
    "homepage": "https://github.com/ion-digital/ion-php-packaging",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Justus Meyer",
            "role": "developer",
            "homepage": "https://ion.digital"
        }
    ],
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "ion/packaging-tools": "dev-main"
    },
    
    "minimum-stability": "dev", 
    "autoload": {
        "files": [
            "autoload.php"
        ]
    },    
    "autoload-dev": {
        "psr-4": {
            "ion\\": [ 

                "source/classes/ion/", 
                "source/interfaces/ion/", 
                "source/traits/ion/",             
                "tests/unit/ion/"
            ]
        }
    },
    "repositories": [

        {
            "type": "vcs",
            "url": "https://github.com/ion-digital/ion-php-packaging-tools.git"
        }        
    ],    
    "scripts": {
        "tests": [

            "./vendor/bin/phpunit ./tests/unit"
        ],
        "builds": [

            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 5.6 --input ./source/classes/ --output ./builds/5.6/",
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 7.0 --input ./source/classes/ --output ./builds/7.0/",
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 7.1 --input ./source/classes/ --output ./builds/7.1/",
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 7.2 --input ./source/classes/ --output ./builds/7.2/",
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 7.3 --input ./source/classes/ --output ./builds/7.3/",
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 7.4 --input ./source/classes/ --output ./builds/7/",
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 8.0 --input ./source/classes/ --output ./builds/8.0/",            
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 8.1 --input ./source/classes/ --output ./builds/8.1/",
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 8.2 --input ./source/classes/ --output ./builds/8/",

            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 5.6 --input ./source/interfaces/ --output ./builds/5.6/",
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 7.0 --input ./source/interfaces/ --output ./builds/7.0/",
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 7.1 --input ./source/interfaces/ --output ./builds/7.1/",
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 7.2 --input ./source/interfaces/ --output ./builds/7.2/",
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 7.3 --input ./source/interfaces/ --output ./builds/7.3/",
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 7.4 --input ./source/interfaces/ --output ./builds/7/",
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 8.0 --input ./source/interfaces/ --output ./builds/8.0/",            
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 8.1 --input ./source/interfaces/ --output ./builds/8.1/",
            "./vendor/bin/php-trans-porter --source-version 8.2 --target-version 8.2 --input ./source/interfaces/ --output ./builds/8/"            
        ],
        "release": [

            "git checkout -b release/main",
            "git add .",
            "git commit -m \"Release\"",
            "composer run-script builds",
            "composer run-script tests"
        ]
    }
}
